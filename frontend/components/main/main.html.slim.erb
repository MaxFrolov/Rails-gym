  #anchor.container-fluid.main-page__wrapper
    .row
      ul.relative
        li ui-sref-active="active"
          a ui-sref="app.main" Главная
        li
          a ui-sref="app.inner-layout.workouts" Упражнения
        li
          a ui-sref="app.inner-layout.shop.products" Магазин
        li
          a ui-sref="app.inner-layout.nutrition" Питание
        li
          a ui-sref="app.inner-layout.blog.posts" Блог
        li
